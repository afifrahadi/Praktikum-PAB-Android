<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Praktikum3" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="TextContent.TitleMedium">
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
        <item name="android:layout_marginTop">90dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginBottom">14dp</item>
    </style>

    <style name="ImageView.Circle">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">200dp</item>
    </style>

    <style name="TextContent.Hello">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">#D8BFD8</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextContent.Paragraf">
        <item name="android:layout_width">325dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:background">#D8BFD8</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ButtonGeneral">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonGeneral.Github">
        <item name="android:layout_marginBottom">109dp</item>
    </style>

    <style name="ButtonGeneral.Share">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
</resources>