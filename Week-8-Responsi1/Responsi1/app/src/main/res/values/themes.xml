<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Responsi1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="TextContent.TitleMedium">
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginBottom">14dp</item>
    </style>

    <style name="ImageView.Circle">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">200dp</item>
    </style>

    <style name="TextContent.Paragraf">
        <item name="android:layout_width">325dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="ButtonGeneral">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonGeneral.Share">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="ButtonGeneral.NBA">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

</resources>